<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.madtitansports"
       name="Mad Titan Sports"
       version="2.0.0"
       provider-name="Mad Titan">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.resolveurl" version="5.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <summary lang="en_US">Mad Titan Sports</summary>
        <description lang="en_US">Live sports streaming with EPG integration and replay functionality</description>
        <disclaimer lang="en_US">Mad Titan Sports does not host any content</disclaimer>
    </extension>
</addon>