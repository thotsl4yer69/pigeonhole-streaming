<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tempest"
       name="Tempest"
       version="1.0.0"
       provider-name="Tempest">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.resolveurl" version="5.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <summary lang="en_US">Tempest</summary>
        <description lang="en_US">Multi-source streaming addon with premium service support</description>
        <disclaimer lang="en_US">Tempest doesn't host any content</disclaimer>
    </extension>
</addon>