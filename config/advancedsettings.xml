<?xml version="1.0" encoding="UTF-8"?>
<advancedsettings>
    <!-- Firecube Maximum Performance Configuration -->
    <cache>
        <buffermode>1</buffermode>
        <memorysize>167772160</memorysize>
        <readbufferfactor>4.0</readbufferfactor>
    </cache>
    <network>
        <curlclienttimeout>30</curlclienttimeout>
        <curllowspeedtime>20</curllowspeedtime>
        <curlretries>2</curlretries>
        <disableipv6>false</disableipv6>
    </network>
    <video>
        <displaylatency>-1</displaylatency>
        <pauseafterrefreshchange>0.10</pauseafterrefreshchange>
        <playcountminimumpercent>90</playcountminimumpercent>
        <ignoreseasonzeroinlists>false</ignoreseasonzeroinlists>
        <smallstepbackseconds>7</smallstepbackseconds>
        <smallstepbacktrimseconds>3</smallstepbacktrimseconds>
        <smallstepbacknotify>false</smallstepbacknotify>
        <bigstepbackseconds>60</bigstepbackseconds>
        <bigstepforwardseconds>600</bigstepforwardseconds>
        <smallstepforwardseconds>30</smallstepforwardseconds>
    </video>
    <audio>
        <resample>48000</resample>
        <stereoupmix>true</stereoupmix>
        <ac3downmix>true</ac3downmix>
        <ac3transcode>false</ac3transcode>
        <dtspassthrough>true</dtspassthrough>
        <trueshdpassthrough>true</trueshdpassthrough>
        <dtshddpassthrough>true</dtshddpassthrough>
    </audio>
    <gui>
        <algorithmdirtyregions>3</algorithmdirtyregions>
        <visualizedirtyregions>false</visualizedirtyregions>
        <noflipTimeout>0</noflipTimeout>
    </gui>
    <epg>
        <updatecheckinterval>60</updatecheckinterval>
        <cleanupcheckinterval>900</cleanupcheckinterval>
        <activetagcheckinterval>60</activetagcheckinterval>
        <retryinterruptedupdatesinterval>30</retryinterruptedupdatesinterval>
        <updatecheckinterval>60</updatecheckinterval>
        <displayupdatepopup>false</displayupdatepopup>
        <displayincrementalupdatepopup>false</displayincrementalupdatepopup>
    </epg>
    <pvr>
        <timecorrection>0</timecorrection>
        <infotoggleinterval>3000</infotoggleinterval>
        <minvideocachelevel>5</minvideocachelevel>
        <minaudiocachelevel>10</minaudiocachelevel>
        <cacheindvdplayer>true</cacheindvdplayer>
        <displaychannelinfo>false</displaychannelinfo>
    </pvr>
    <services>
        <webserver>true</webserver>
        <webserverport>8080</webserverport>
        <webserverusername></webserverusername>
        <webserverpassword></webserverpassword>
        <webskin>webinterface.default</webskin>
        <zeroconf>true</zeroconf>
        <airplay>true</airplay>
        <airplayvolumecontrol>true</airplayvolumecontrol>
        <useairplaypassword>false</useairplaypassword>
        <airplaypassword></airplaypassword>
        <upnp>false</upnp>
        <upnpserver>false</upnpserver>
        <upnprenderer>false</upnprenderer>
        <upnpcontroller>true</upnpcontroller>
        <deviceuuid></deviceuuid>
    </services>
</advancedsettings>