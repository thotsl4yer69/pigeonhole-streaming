<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="10000">
    <defaultcontrol always="true">9000</defaultcontrol>
    <views>50</views>
    <controls>
        <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <texture>backgrounds/pigeonhole_bg.jpg</texture>
                <aspectratio>scale</aspectratio>
            </control>
            <control type="label">
                <posx>960</posx>
                <posy>100</posy>
                <width>800</width>
                <height>80</height>
                <font>font30</font>
                <textcolor>white</textcolor>
                <align>center</align>
                <label>Pigeonhole Streaming - Professional Entertainment</label>
            </control>
            <control type="fixedlist" id="9000">
                <posx>200</posx>
                <posy>300</posy>
                <width>1520</width>
                <height>600</height>
                <orientation>horizontal</orientation>
                <focusposition>2</focusposition>
                <movement>6</movement>
                <itemlayout height="200" width="200">
                    <control type="image">
                        <width>180</width>
                        <height>180</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                    <control type="label">
                        <posy>185</posy>
                        <width>180</width>
                        <height>25</height>
                        <font>font12</font>
                        <textcolor>white</textcolor>
                        <align>center</align>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="200" width="200">
                    <control type="image">
                        <width>180</width>
                        <height>180</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <bordertexture border="8">frames/focused.png</bordertexture>
                        <bordersize>8</bordersize>
                    </control>
                    <control type="label">
                        <posy>185</posy>
                        <width>180</width>
                        <height>25</height>
                        <font>font12</font>
                        <textcolor>yellow</textcolor>
                        <align>center</align>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
                <content>
                    <item>
                        <label>Movies</label>
                        <onclick>ActivateWindow(Videos,MovieTitles)</onclick>
                        <icon>icons/movies.png</icon>
                    </item>
                    <item>
                        <label>TV Shows</label>
                        <onclick>ActivateWindow(Videos,TVTitles)</onclick>
                        <icon>icons/tvshows.png</icon>
                    </item>
                    <item>
                        <label>Live TV</label>
                        <onclick>ActivateWindow(TVChannels)</onclick>
                        <icon>icons/livetv.png</icon>
                    </item>
                    <item>
                        <label>Add-ons</label>
                        <onclick>ActivateWindow(AddonBrowser)</onclick>
                        <icon>icons/addons.png</icon>
                    </item>
                    <item>
                        <label>Settings</label>
                        <onclick>ActivateWindow(Settings)</onclick>
                        <icon>icons/settings.png</icon>
                    </item>
                </content>
            </control>
        </control>
    </controls>
</window>