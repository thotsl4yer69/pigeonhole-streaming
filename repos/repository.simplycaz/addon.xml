<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.simplycaz"
       name="Simply Caz Repository"
       version="1.0.0" 
       provider-name="Simply Caz">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository">
        <dir>
            <info compressed="false">https://simplycaz.github.io/addons.xml</info>
            <checksum>https://simplycaz.github.io/addons.xml.md5</checksum>
            <datadir zip="true">https://simplycaz.github.io/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <summary lang="en_US">Simply Caz Repository</summary>
        <description lang="en_US">Repository for streaming addons and tools</description>
    </extension>
</addon>