<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.tempest"
       name="Tempest Repository" 
       version="1.0.0"
       provider-name="Tempest">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository">
        <dir>
            <info compressed="false">https://tempest0580.github.io/addons.xml</info>
            <checksum>https://tempest0580.github.io/addons.xml.md5</checksum>
            <datadir zip="true">https://tempest0580.github.io/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <summary lang="en_US">Tempest Repository</summary>
        <description lang="en_US">Repository for Tempest and streaming addons</description>
    </extension>
</addon>