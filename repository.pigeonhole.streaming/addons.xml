<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.pigeonhole.streaming"
           name="Pigeonhole Streaming Repository"
           version="1.0.0"
           provider-name="Pigeonhole Project">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Pigeonhole Streaming Repository">
            <dir>
                <info compressed="false">https://raw.githubusercontent.com/pigeonhole-project/repository/main/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/pigeonhole-project/repository/main/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/pigeonhole-project/repository/main/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Pigeonhole Streaming Repository</summary>
            <description>Repository for Pigeonhole Project streaming addons optimized for Fire TV and Android devices</description>
            <disclaimer>Use at your own risk. Content providers may have geographical restrictions.</disclaimer>
            <platform>all</platform>
            <license>GPL-3.0</license>
            <website>https://github.com/pigeonhole-project</website>
            <email>support@pigeonhole-project.org</email>
            <source>https://github.com/pigeonhole-project/repository</source>
            <news>Initial release - Fire TV optimized repository</news>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>